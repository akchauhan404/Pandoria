{
  "name": "Pandoria",
  "version": "1.0.0",
  "description": "AI-powered storytelling application with React frontend and Node.js backend",
  "main": "backend/server.js",
  "scripts": {
    "setup": "./setup.sh",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && pnpm run dev --host",
    "build": "cd frontend && pnpm run build",
    "install:all": "cd backend && npm install && cd ../frontend && pnpm install"
  },
  "keywords": [
    "ai",
    "storytelling",
    "openai",
    "react",
    "nodejs",
    "express",
    "dall-e",
    "gpt-4"
  ],
  "author": "Pandoria",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "."
  }
}

